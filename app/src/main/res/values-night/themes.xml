<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SetGo" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorOnPrimary">@color/textColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/textColor</item>
        <item name="colorSecondaryVariant">@color/secondaryText</item>
        <item name="colorOnSecondary">@color/darkBackground</item>

        <item name="bottomSheetDialogTheme">@style/CustomBottomSheetDialog</item>

        <item name="android:statusBarColor">@color/transparent</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="ShapeAppearanceOverlay.MyApp.Button" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">23dp</item>
    </style>

    <style name="LargeText">
        <item name="fontFamily">@font/lato_black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="MediumText">
        <item name="fontFamily">@font/lato_black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">21sp</item>
    </style>

    <style name="SmallText">
        <item name="fontFamily">@font/lato_black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="xSmallText">
        <item name="fontFamily">@font/cabin_bold</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="RoundedCornersDialog" parent="@style/Theme.MaterialComponents.Dialog">
<!--        <item name="dialogCornerRadius">16dp</item>-->
        <item name="android:windowBackground">@drawable/dialog_background</item>
    </style>


    <style name="MyTransparentBottomSheetDialogTheme" parent="Theme.AppCompat.Light">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:colorBackground">@android:color/transparent</item>
    </style>



    <style name="CustomBottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
    </style>

    <style name="CustomBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearanceBottomSheetDialog</item>
    </style>

    <style name="CustomShapeAppearanceBottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

</resources>
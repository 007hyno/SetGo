<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
<!-- Background shape -->
<item android:id="@android:id/background">
    <shape android:shape="rectangle">
        <solid android:color="@color/lightSecondary" />
        <corners android:radius="16dp"/>
    </shape>
</item>

<!-- Right-side stroke -->
<item android:right="5dp" android:bottom="5dp"> <!-- Adjust the stroke width as needed -->
    <shape android:shape="rectangle">
        <corners android:radius="11dp"/>
        <solid android:color="@color/secondary" />

        <stroke
            android:width="5dp"
        android:color="@color/secondary" /> <!-- Set your desired stroke color here -->
    </shape>
</item>

</layer-list>
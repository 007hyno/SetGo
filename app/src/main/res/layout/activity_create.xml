<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".Activities.CreateActivity">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="CREATE"
                style="@style/LargeText"
                />
<com.google.android.material.textfield.TextInputLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
    android:id="@+id/taskNameCont"
    >

            <com.google.android.material.textfield.TextInputEditText
                android:padding="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/taskName"
                android:inputType="textCapSentences"
                android:maxLines="1"
                android:textSize="20dp"
                android:textStyle="bold"
                android:hint="Enter Task Name"
                />
<!--                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"-->
</com.google.android.material.textfield.TextInputLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"

                >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Sets"
                style="@style/SmallText"
                />
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_info"
                    android:background="@color/background"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/create_button_background_strips"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:weightSum="5"
                android:gravity="center"
                >

                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:icon="@drawable/ic_minus"
                    android:background="@drawable/left_btn_rounded"
                    android:layout_margin="0dp"
                    app:cornerRadius="10dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:layout_weight="1"
                    app:backgroundTint="@color/lightSecondary"
                    android:id="@+id/setDec"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="3"
                    android:textAlignment="center"
                    style="@style/LargeText"
                    android:id="@+id/set"

                    />
                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:icon="@drawable/ic_add"
                    android:background="@drawable/right_btn_rounded"
                    android:layout_margin="0dp"
                    app:cornerRadius="10dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:layout_weight="1"
                    app:backgroundTint="@color/lightSecondary"

                    android:id="@+id/setInc"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"

                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Duration of Single Set"
                    style="@style/SmallText"
                    />
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_info"
                    android:background="@color/background"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/create_button_background_strips"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:id="@+id/notification"
                android:weightSum="5"
                android:gravity="center"
                >

                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:icon="@drawable/ic_minus"
                    android:background="@drawable/left_btn_rounded"
                    android:layout_margin="0dp"
                    app:cornerRadius="10dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:id="@+id/durationDec"

                    android:layout_weight="1"
                    app:backgroundTint="@color/lightSecondary"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="3"
                    android:id="@+id/duration"
                    android:textAlignment="center"
                    style="@style/LargeText"

                    />
                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:icon="@drawable/ic_add"
                    android:background="@drawable/right_btn_rounded"
                    android:layout_margin="0dp"
                    app:cornerRadius="10dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:layout_weight="1"
                    app:backgroundTint="@color/lightSecondary"
                    android:id="@+id/durationInc"

                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"

                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Rest Duration"
                    style="@style/SmallText"
                    />
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_info"
                    android:background="@color/background"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/create_button_background_strips"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:weightSum="5"
                android:gravity="center"
                >

                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:icon="@drawable/ic_minus"
                    android:background="@drawable/left_btn_rounded"
                    android:layout_margin="0dp"
                    app:cornerRadius="10dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:layout_weight="1"
                    app:backgroundTint="@color/lightSecondary"
                    android:id="@+id/restDec"

                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="3"
                    android:textAlignment="center"
                    android:id="@+id/rest"

                    style="@style/LargeText"

                    />
                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:icon="@drawable/ic_add"
                    android:background="@drawable/right_btn_rounded"
                    android:layout_margin="0dp"
                    app:cornerRadius="10dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:layout_weight="1"
                    app:backgroundTint="@color/lightSecondary"
                    app:iconGravity="textStart"
                    android:id="@+id/restInc"

                    app:iconPadding="0dp"
                    />
            </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="20dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sets x Reps x duration/per "
                android:layout_weight="1"
                android:textAlignment="center"
                android:textColor="@color/secondaryText"
                style="@style/xSmallText"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Total"
                android:textColor="@color/secondaryText"
                style="@style/xSmallText"
                android:textAlignment="center"/>
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:gravity="center"
                >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:background="@drawable/sub_item"
                android:paddingHorizontal="5dp"
                style="@style/xSmallText"

                />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="X"
                    android:layout_marginHorizontal="10dp"
                    />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7"
                android:background="@drawable/sub_item"
                android:paddingHorizontal="5dp"
                style="@style/xSmallText"

                />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="X"
                    android:layout_marginHorizontal="10dp"

                    />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6"
                android:background="@drawable/sub_item"
                android:paddingHorizontal="5dp"
                style="@style/xSmallText"

                />
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:gravity="center"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3m 4s"
                    android:background="@drawable/sub_item"
                    android:paddingHorizontal="5dp"
                    style="@style/xSmallText"

                    />
            </LinearLayout>
        </LinearLayout>
</LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save"
                app:cornerRadius="30dp"
                android:textAllCaps="false"
                android:paddingHorizontal="1dp"
                android:paddingVertical="20dp"
                style="@style/MediumText"
                />


        </LinearLayout>

</LinearLayout>